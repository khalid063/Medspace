<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="65dp"
    android:orientation="horizontal">


    <LinearLayout
        android:background="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="100">

        // Search Area
        <LinearLayout
            android:id="@+id/searchButId"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/searchImageViewIcon"
                android:background="#FFFFFF"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/search_psd_icon"
                android:clickable="true" />
            <TextView
                android:background="#FFFFFF"
                android:gravity="center"
                android:id="@+id/feed_text_butId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Search"
                android:textSize="12sp"
                android:textColor="#000000"
                android:layout_marginTop="3dp"/>

        </LinearLayout>

        // Discassion Area
        <LinearLayout
            android:id="@+id/discasionhButId"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/discassionImageViewIcon"
                android:background="#FFFFFF"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/discass_psd_icon"
                android:clickable="true" />

            <TextView
                android:background="#FFFFFF"
                android:gravity="center"
                android:id="@+id/search_text_butId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="Discassion"
                android:textColor="#000000"
                android:textSize="12sp" />

        </LinearLayout>

        // Home Area
        <LinearLayout
            android:id="@+id/homeButId"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/homeImageViewIcon"
                android:background="#FFFFFF"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/home_psd_icon"
                android:clickable="true" />
            <TextView
                android:background="#FFFFFF"
                android:gravity="center"
                android:id="@+id/discassion_text_butId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textSize="12sp"
                android:textColor="#000000"
                android:layout_marginTop="3dp"/>

        </LinearLayout>

        // Chat Area
        <LinearLayout
            android:id="@+id/chatButId"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/chatImageViewIcon"
                android:background="#FFFFFF"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/chat_psd_icon"
                android:clickable="true" />
            <TextView
                android:background="#FFFFFF"
                android:gravity="center"
                android:id="@+id/chat_text_butId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chat"
                android:textSize="12sp"
                android:textColor="#000000"
                android:layout_marginTop="3dp"/>

        </LinearLayout>

        // Library Area
        <LinearLayout
            android:id="@+id/libraryButId"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/libraryImageViewIcon"
                android:background="#FFFFFF"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/library_psd_icon"
                android:clickable="true" />
            <TextView
                android:background="#FFFFFF"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Library"
                android:textSize="12sp"
                android:textColor="#000000"
                android:layout_marginTop="3dp"/>

        </LinearLayout>



    </LinearLayout>




</LinearLayout>